<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="600px"
        android:layout_height="300px"
        android:layout_centerInParent="true"
        android:background="@mipmap/msgbg"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="55px"
            android:gravity="center"
            tools:text="提示"
            android:visibility="visible"
            android:textColor="#FFFFFF"
            android:textSize="30px" />
        <ImageView
            android:id="@+id/image"
            tools:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:maxHeight="150dp"
            android:maxWidth="150dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="20px"
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:lineSpacingExtra="3dp"
            android:lineSpacingMultiplier="1.2"
            android:textSize="24px"
            android:textColor="#FFFFFF"
             />
        <ProgressBar
            android:layout_marginRight="20px"
            android:layout_marginLeft="20px"
            android:layout_marginTop="20px"
            android:id="@+id/progress_pp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100"
            style="?android:attr/progressBarStyleHorizontal"
            />
        <TextView
            android:layout_gravity="center_horizontal"
            android:textSize="35sp"
            android:id="@+id/tv_progress_pp"
            android:layout_width="wrap_content"
            android:gravity="right"
            android:textColor="#ffffff"
            android:text="0%"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:id="@+id/but_parent"
            android:visibility="gone"
            android:layout_marginTop="34px"
            android:layout_width="match_parent"
            android:layout_height="78px"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_centerInParent="true"
                    android:id="@+id/negtive"
                    android:layout_width="182px"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@mipmap/surebg"
                    android:gravity="center"
                    android:singleLine="true"
                    tools:text="No"
                    android:textColor="#999999"
                    android:textSize="16sp" />


                <View
                    android:background="#ffffff"
                    android:id="@+id/column_line"
                    android:layout_width="1px"
                    android:layout_height="match_parent"/>

                <Button
                    android:layout_centerInParent="true"
                    android:id="@+id/positive"
                    android:layout_width="182px"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:background="@mipmap/surebg"
                    android:gravity="center"
                    android:singleLine="true"
                    tools:text="确认"
                    android:textColor="#FFFFFF"
                    android:textSize="24px" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
