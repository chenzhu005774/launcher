<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amtzhmt.launcher.channelplay.ChannelplayActivity">

    <com.amtzhmt.launcher.util.utils.customizeview.MyVideoView
        android:id="@+id/channelplay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/playcontrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/channelnumber"
            android:textColor="@color/whithe"
            android:textSize="70sp"
            android:textStyle="bold"
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40dp"
            android:layout_alignParentRight="true" />


        <ImageView
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:id="@+id/playpause"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:src="@mipmap/pause"
            android:layout_width="40px"
            android:layout_height="40px" />


        <TextView
            android:textColor="@color/whithe"
            android:textSize="20sp"
            android:text="19:30/12:12"
            android:id="@+id/time"
            android:gravity="center"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="150px"
            android:layout_height="50px" />


        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_toRightOf="@id/playpause"
            android:layout_toLeftOf="@id/time"
            android:layout_margin="20dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
            android:max="200"
            android:progress="100"
            android:secondaryProgress="150" />

    </RelativeLayout>



</FrameLayout>
